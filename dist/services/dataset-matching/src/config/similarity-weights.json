{
    "algorithms": {
        "jaro_winkler": {
            "weight": 0.4,
            "prefix_scale": 0.1,
            "description": "Best for organization names with common prefixes"
        },
        "levenshtein": {
            "weight": 0.3,
            "normalization": "max_length",
            "description": "Good for handling typos and minor variations"
        },
        "word_level_similarity": {
            "weight": 0.2,
            "ignore_order": true,
            "stemming": false,
            "description": "Effective for different word arrangements"
        },
        "character_ngram": {
            "weight": 0.1,
            "ngram_size": 3,
            "description": "Helps with partial matches and abbreviations"
        }
    },
    "context_adjustments": {
        "organization_types": {
            "university": {
                "boost_factor": 1.1,
                "keywords": ["university", "college", "school", "institute of technology"]
            },
            "research_institute": {
                "boost_factor": 1.15,
                "keywords": ["research institute", "research center", "laboratory", "lab"]
            },
            "medical": {
                "boost_factor": 1.1,
                "keywords": ["medical", "hospital", "clinic", "health"]
            },
            "military": {
                "boost_factor": 1.2,
                "keywords": ["military", "army", "navy", "air force", "defense"]
            },
            "aerospace": {
                "boost_factor": 1.15,
                "keywords": ["aerospace", "aviation", "space", "aeronautics"]
            },
            "technology": {
                "boost_factor": 1.1,
                "keywords": ["technology", "tech", "engineering", "sciences"]
            }
        },
        "geographic_boost": {
            "same_country": 1.2,
            "same_region": 1.1,
            "different_region": 0.9
        },
        "length_penalties": {
            "very_short": {
                "threshold": 3,
                "penalty": 0.8,
                "description": "Penalize very short matches to avoid false positives"
            },
            "length_mismatch": {
                "ratio_threshold": 0.3,
                "penalty": 0.9,
                "description": "Penalize matches with very different lengths"
            }
        }
    },
    "special_patterns": {
        "acronym_detection": {
            "enable": true,
            "parentheses_patterns": ["(.+?)\\s*\\(([A-Z]{2,})\\)", "(.+?)\\s*\\[([A-Z]{2,})\\]"],
            "boost_factor": 1.3,
            "description": "Detect and boost matches with acronyms in parentheses"
        },
        "abbreviation_expansion": {
            "enable": true,
            "common_abbreviations": {
                "univ": "university",
                "inst": "institute",
                "tech": "technology",
                "med": "medical",
                "sci": "science",
                "eng": "engineering",
                "res": "research",
                "dev": "development",
                "corp": "corporation",
                "ltd": "limited",
                "inc": "incorporated"
            }
        },
        "suffix_normalization": {
            "enable": true,
            "organization_suffixes": [
                "university", "institute", "college", "school",
                "corporation", "company", "ltd", "inc", "llc",
                "center", "centre", "laboratory", "lab",
                "academy", "foundation", "association"
            ],
            "weight_reduction": 0.1
        }
    },
    "quality_filters": {
        "minimum_word_overlap": 0.3,
        "maximum_length_ratio": 5.0,
        "minimum_character_overlap": 0.5,
        "filter_common_words": true,
        "require_significant_match": true
    },
    "performance_tuning": {
        "early_termination": {
            "enable": true,
            "confidence_threshold": 0.95,
            "description": "Stop processing when very high confidence match found"
        },
        "batch_processing": {
            "chunk_size": 100,
            "parallel_processing": true,
            "max_concurrent": 5
        },
        "caching": {
            "normalize_cache_keys": true,
            "cache_negative_results": false,
            "cache_similarity_scores": true
        }
    }
}
