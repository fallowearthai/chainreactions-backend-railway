# Production Environment Variables for DigitalOcean Deployment
# Copy this file to .env and fill in your actual values

# =============================================================================
# SECURITY WARNING: NEVER commit this file with real secrets to version control
# =============================================================================

# External API Keys (Required)
GEMINI_API_KEY=your_gemini_api_key_here
BRIGHT_DATA_API_KEY=your_bright_data_api_key_here
BRIGHT_DATA_SERP_ZONE=your_bright_data_serp_zone
LINKUP_API_KEY=your_linkup_api_key_here
LINKUP_API_KEY_2=your_linkup_api_key_2_here

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Authentication & Security (Required)
JWT_SECRET=your_very_strong_jwt_secret_minimum_32_characters
REFRESH_TOKEN_SECRET=your_very_strong_refresh_token_secret_minimum_32_characters
REDIS_PASSWORD=your_strong_redis_password_minimum_16_characters

# Frontend Configuration
FRONTEND_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com

# Service Configuration
NODE_ENV=production
LOG_LEVEL=INFO
GEMINI_MODEL=gemini-2.5-flash

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=300000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# File Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=50MB

# Default Matching Configuration
DEFAULT_MIN_CONFIDENCE=0.6

# JWT Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# =============================================================================
# DigitalOcean Deployment Notes:
# 1. Set these as environment variables in your DigitalOcean Droplet
# 2. Use strong, unique passwords for all secrets
# 3. Rotate API keys regularly
# 4. Monitor access logs for unusual activity
# 5. Keep these values secure and never share them
# =============================================================================