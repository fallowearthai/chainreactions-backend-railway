# Service Configuration
PORT=3007
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Frontend Configuration
FRONTEND_URL=http://localhost:3001

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=300000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Email Configuration (for future email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=noreply@chainreactions.ai

# Security Configuration
BCRYPT_ROUNDS=12
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Service-to-Service Authentication
VALID_SERVICE_TOKENS=service_token_1,service_token_2

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Database Configuration (backup if not using Supabase)
DATABASE_URL=postgresql://username:password@localhost:5432/chainreactions

# Redis Configuration (for caching, if needed)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Development Configuration
ENABLE_DEBUG_LOGGING=true
ENABLE_SWAGGER_UI=true

# Production Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_OAUTH_SIGNIN=true
ENABLE_BULK_OPERATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false